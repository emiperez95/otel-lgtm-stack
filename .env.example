# OpenTelemetry LGTM Stack Configuration
# Copy this file to .env and customize for your environment

# Environment Configuration
ENVIRONMENT=development

# OpenTelemetry Collector Ports
OTEL_GRPC_PORT=4317          # OTLP gRPC endpoint
OTEL_HTTP_PORT=4318          # OTLP HTTP endpoint
OTEL_METRICS_PORT=8889       # Collector metrics endpoint

# Grafana Configuration
GRAFANA_PORT=8439            # Grafana web UI port
GRAFANA_USER=admin           # Default admin username
GRAFANA_PASSWORD=changeme    # CHANGE THIS IN PRODUCTION!
GRAFANA_HOST=localhost       # Hostname for Grafana
# GRAFANA_PLUGINS=           # Comma-separated list of plugins to install

# Prometheus Configuration
PROMETHEUS_PORT=9090         # Prometheus web UI port
PROMETHEUS_RETENTION=30d     # How long to keep metrics

# Loki Configuration
LOKI_PORT=3100              # Loki HTTP endpoint

# Tempo Configuration
TEMPO_PORT=3200             # Tempo query frontend
TEMPO_GRPC_PORT=9095        # Tempo gRPC endpoint

# Pyroscope Configuration
PYROSCOPE_PORT=4040         # Pyroscope HTTP API and UI

# Logging Configuration
LOG_LEVEL=info              # Options: debug, info, warn, error